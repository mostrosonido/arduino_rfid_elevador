#include <SPI.h>
#include <MFRC522.h>
 const int rele = 4;
 const int ledv = 2;
 const int ledr = 3;
 String tarjetas[] = {"28 C9 90 29",
                      "EA 95 9F 15",
                      "04 09 BC A2 CB 41 81",
                      "43 33 D0 1F",
                      "73 2D 20 F6",
                      "DB 89 A3 F6",};
#define SS_PIN 10
#define RST_PIN 9
MFRC522 mfrc522(SS_PIN, RST_PIN);   // Create MFRC522 instance.

 
void setup() 
{
  Serial.begin(9600);   // Initiate a serial communication
  SPI.begin();      // Initiate  SPI bus
  mfrc522.PCD_Init();   // Initiate MFRC522
  Serial.println("Approximate your card to the reader...");
  Serial.println();
  pinMode(rele,OUTPUT);
  pinMode(ledv,OUTPUT);
  pinMode(ledr,OUTPUT);

}

void loop() 
{
  // Look for new cards
  if ( ! mfrc522.PICC_IsNewCardPresent()) 
  {
    return;
  }
  // Select one of the cards
  if ( ! mfrc522.PICC_ReadCardSerial()) 
  {
    return;
  }
  //Show UID on serial monitor
  Serial.print("UID tag :");
  String content= "";
  byte letter;
  for (byte i = 0; i < mfrc522.uid.size; i++) 
  {
     Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " ");
     Serial.print(mfrc522.uid.uidByte[i], HEX);
     content.concat(String(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " "));
     content.concat(String(mfrc522.uid.uidByte[i], HEX));
  }
  Serial.println();
  Serial.print("Message : ");
  content.toUpperCase();
  int bandera = 0;
  for (int i=0; i<7; i++){ //incrementar el ciclo si se agrega una tarjeta en el arreglo
  if (content.substring(1) == tarjetas[i]) //change here the UID of the card/cards that you want to give access
  {
    bandera = 1;
  }
  }
  if (bandera == 1){ 
    Serial.println("Authorized access");
    digitalWrite(rele,HIGH);
    Serial.println();
    digitalWrite(ledv,HIGH);
    delay(5000);
    digitalWrite(rele,LOW);
    digitalWrite(ledv,LOW);
  }
 
 else   {
    Serial.println(" Access denied");
    digitalWrite(ledr,HIGH);
    delay(3000);
    digitalWrite(ledr,LOW);
  }
}
